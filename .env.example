# 애플리케이션 버전 정보
APP_VERSION=1.0.0
APP_BUILD_DATE=2025-09-14

# 네이버 API 설정 (필수 - 실제 값으로 변경 필요)
NAVER_CLIENT_ID=your_client_id_here
NAVER_CLIENT_SECRET=your_client_secret_here

# 데이터베이스 설정
DATABASE_PATH=orders.db

# 디스코드 알림 설정 (선택사항)
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
DISCORD_ENABLED=true

# 알림 설정
DESKTOP_NOTIFICATIONS=true
CHECK_INTERVAL=300

# 자동 새로고침 설정
AUTO_REFRESH=true
REFRESH_INTERVAL=600

# 상품상태 조회 설정
PRODUCT_STATUS_TYPES=SALE,WAIT,OUTOFSTOCK

# 주문 컬럼 설정
ORDER_COLUMNS=주문ID,주문자,상품명,옵션정보,수량,금액,배송지주소,배송예정일,주문일시,상태

# IP 관리 설정 (서버에서는 모든 IP 허용)
ALLOWED_IPS=0.0.0.0

# 기간 설정
QUICK_PERIOD_SETTING=3

# 주문 상태 조회 설정
ORDER_STATUS_TYPES=PAYMENT_WAITING,PAYED,DELIVERING

# 대시보드 설정
DASHBOARD_PERIOD_DAYS=3

# 신규 탭 기본 기간 설정
NEW_ORDER_DEFAULT_DAYS=3
SHIPPING_PENDING_DEFAULT_DAYS=3
SHIPPING_IN_PROGRESS_DEFAULT_DAYS=30
SHIPPING_COMPLETED_DEFAULT_DAYS=7
PURCHASE_DECIDED_DEFAULT_DAYS=3
CANCEL_DEFAULT_DAYS=30
RETURN_EXCHANGE_DEFAULT_DAYS=15
CANCEL_RETURN_EXCHANGE_DEFAULT_DAYS=7

# 웹서버 설정 (웹서버 사용시)
HOST=0.0.0.0
PORT=8000